<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="New Text"
        android:id="@+id/Heading"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:layout_toStartOf="@+id/Type"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/Type"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Subheading"
        android:layout_below="@+id/Heading"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Heading"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"
        android:layout_below="@+id/Subheading"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/view">
    </View>
    <View
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:background="#d7d7d7"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:id="@+id/view3">
    </View>
    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#d7d7d7"
    android:id="@+id/view2"
    android:layout_below="@+id/view3"
    android:layout_alignEnd="@+id/Type">
</View>
    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#d7d7d7"
    android:id="@+id/view4"
    android:layout_alignParentBottom="true"
    android:layout_alignEnd="@+id/Type"
    android:layout_marginBottom="106dp">
</View>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d7d7d7"
        android:id="@+id/view5"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/Type">
    </View>

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:layout_below="@+id/view2"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/view4"
        android:stretchMode="columnWidth"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/view5"
        android:layout_below="@+id/gridView"
        android:orientation="horizontal">
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rent"
        android:id="@+id/textView5"
        android:layout_marginStart="66dp"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/depsit"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/Type"
        android:layout_marginEnd="42dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="50dp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView3"

        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/textView6"/>

</RelativeLayout>