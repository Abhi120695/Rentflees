<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv"
    android:layout_weight="0.09"
   >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/Housephoto"


                android:layout_alignParentTop="true"
                android:layout_above="@+id/discription"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:id="@+id/Price"

                android:textSize="20sp"
                android:text="Rs2000"
                android:layout_below="@+id/Housephoto"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/discription"

                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/Price"/>

            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/Wishbutton"
                android:background="@drawable/mybtntoggle"
                android:onClick="addremovewishlist"
                android:textOff="@string/blank"
                android:textOn="@string/blank"
                android:layout_above="@+id/discription"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:text="New Text"
                android:id="@+id/type"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="#eea6a6"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingTop="4dp"
                android:paddingLeft="14dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

